<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/category_tag_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/additional_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/test_string_details_hint" />

    <Button
        android:id="@+id/test_proceed_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_build_next"
        android:onClick="nextViewLocation" />

</LinearLayout>