<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText android:id="@+id/test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:inputType="none" />

    <Spinner
        android:id="@+id/disaster_tag_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/disaster_tag_prompt" />

    <EditText
        android:id="@+id/disaster_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/test_string_builder_hint"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>
    
	<Button android:id="@+id/tweet_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tweet_confirm_text"
        android:onClick="buildString" />
    
</LinearLayout>