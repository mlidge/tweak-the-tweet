<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LocationActivity" >

    <TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/location_title_text"
    android:padding="10dp"
    android:gravity="center"
    />
    
    <Button 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="@string/current_location_button_text"
     android:onClick="chooseLocationUsed"
     android:gravity="center" />
    
    <TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/location_divider_text"
    android:padding="10dp"
    android:gravity="center"
    />
    
    <Button 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="@string/previous_location_button_text"
     android:onClick="chooseLocationUsed"
     android:gravity="center" />

</LinearLayout>